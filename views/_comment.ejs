<div
  id="comment-<%= comment.id %>"
  class="d-flex align-items-start"
  style="margin-bottom: 3%"
>
  <div style="height: 40px; width: 40px">
    <img
      src="/images/<%= comment.user.avatar %>"
      width="40"
      height="40"
      style="border-radius: 50%"
    />
  </div>
  <div class="all-comments-container">
    <div class="comments-title">
      <span style="font-weight: 600"><a href="/users/profile/<%= comment.user._id %>"><%= comment.user.name %></a></span>
      <% if(user.id==comment.user.id) { %>
      <a
        class="delete-comment-button"
        style="color: blue; padding-top: 5px"
        href="/comments/destroy/<%= comment.id %>"
      >
        <i class="fas fa-trash-alt" aria></i>
      </a>
      <% } %>
    </div>
    <span><%= comment.content %> </span>
  </div>
</div>
