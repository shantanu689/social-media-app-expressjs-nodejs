<header>
  <a href="/" id="logo">
    <span> &lt; the hex /&gt; </span>
  </a>

  <% if(locals.user) { %>

    <li>
      <a href="/users/profile/<%= user.id %>">
        <%= user.name %>
      </a>
    </li>
    <li>
      <a href="/users/sign-out"> Sign Out </a>
    </li>

    <% } else { %>
      <div class="d-flex p-2 justify-content-between align-items-center" id="signup-signin">
        <div id="signup">
          <a href="/users/sign-up"> Sign Up </a>
        </div>
        <div id="signin">
          <a href="/users/sign-in"> Sign In </a>
        </div>
      </div>
      <% } %>
</header>