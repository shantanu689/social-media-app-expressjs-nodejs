<header class="shadow">
  <a href="/" id="logo">
    <span> &lt; the hex /&gt; </span>
  </a>

  <% if(locals.user) { %>

  <div
    class="d-flex justify-content-between align-items-center"
    style="width: 63%; padding-right: 6%"
  >
    <form action="/users/search" method="POST" id="search-user-form">
      <input
        type="text"
        name="search_user"
        placeholder="Search user"
        class="rounded"
      />
      <button type="submit" style="background: none; border: none">
        <i class="fas fa-search" style="font-size: larger"> </i>
      </button>
    </form>

    <div
      class="d-flex justify-content-between align-items-center"
      style="width: 30%; font-weight: bold"
    >
      <div id="header-user-info">
        <a
          href="/users/profile/<%= user.id %>"
          class="d-flex align-items-center"
        >
          <% if(user.avatar.includes('http')) { %>
          <img
            src="<%= user.avatar %>"
            width="40"
            height="40"
            style="border-radius: 50%"
            alt=""
          />
          <% } else { %>
          <img
            src="/images/<%= user.avatar %>"
            width="40"
            height="40"
            style="border-radius: 50%"
            alt=""
          />
          <% } %>
          <span style="padding-left: 7px">
            <%= user.name.split(' ')[0] %>
          </span>
        </a>
      </div>
      <a href="/users/sign-out" id="header-sign-out" style="padding: 10px">
        Sign out
      </a>
    </div>
  </div>

  <% } else { %>
  <div
    class="d-flex p-2 justify-content-between align-items-center"
    id="signup-signin"
  >
    <a href="/users/sign-up" id="signup" style="padding: 10px"> Sign Up </a>
    <a href="/users/sign-in" id="signin" style="padding: 10px"> Sign In </a>
  </div>
  <% } %>
</header>
