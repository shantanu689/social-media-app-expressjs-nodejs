<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1>the-hex / <%= title %></h1>

    <section id="feed-posts">
      <% if(locals.user) { %>
      <h4>Posts</h4>
      <form action="/posts/create" method="POST" id="new-post-form">
        <textarea
          name="content"
          id=""
          cols="30"
          rows="3"
          placeholder="Type Here..."
        ></textarea>
        <input type="submit" value="Post" />
      </form>

      <div id="posts-list-container">
        <ul>
          <% for(let post of posts) { %>
          <p>
            <li><%= post.content %></li>
            <small> <%= post.user.name %> </small>
          </p>
          <% } %>
        </ul>
      </div>
      <% } %>
    </section>
  </body>
</html>
