<title>
  <%= title %>
</title>
<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/post-container.css">

<div id="home-container" class="d-flex justify-content-between">
  <section id="feed-posts">
    <% if(locals.user) { %>
      <form action="/posts/create" method="POST" id="new-post-form">
        <textarea name="content" id="" cols="30" rows="3" placeholder="Type Here..." required></textarea>
        <input type="submit" value="Post" />
      </form>

      <div class="posts-list-container">
        <% for(post of posts) { %>

          <%- include('_post.ejs') -%>

            <% } %>
      </div>
      <% } %>
  </section>

  <section id="user-friends">
    <h4>Friends</h4>
    <% for(u of all_users) { %>
      <p>
        <a href="/users/profile/<%= u.id %>">
          <%= u.name %>
        </a>
      </p>
      <% } %>
  </section>
</div>

<script src="/js/home_posts.js"></script>