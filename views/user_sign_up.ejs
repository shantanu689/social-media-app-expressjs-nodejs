<title>
  <%= title %>
</title>

<div class="bg-galaxy body-div">

  <h1 class="text-enter">Welcome to &lt;the hex/&gt;!</h1>

  <form action="/users/create" method="POST" id="form-container" class="d-flex flex-column justify-content-between">
    <input class="form-input" type="text" name="name" placeholder="Name" required />
    <input class="form-input" type="email" name="email" placeholder="Email address" required />
    <input class="form-input" type="password" name="password" placeholder="Password" required />
    <button type="submit" class="form-input submit-btn">Sign Up</button>
    <div style="color: black; text-align: center;">
      <hr style="margin-top: 8px; margin-bottom: 8px; color: black;">
      <p style="margin-top: 10px; margin-bottom: 0px;">OR</p>
    </div>
    <div class="google-container">
      <a href="/" class="form-input google" style="background-color: #55b72d"><i class="fab fa-google"></i> Sign in with
        Google</a>
    </div>
  </form>
</div>